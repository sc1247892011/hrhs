<!-- pages/login/login.wxml -->
<view class="login-container">
  <view class="login-form">
    <view class="login-title">账户登录</view>
    <view class="login-line"><input placeholder="请输入账号" bindinput="onAccountInput" /></view>
    <view class="login-line"><input type="password" placeholder="请输入密码" bindinput="onPasswordInput" /></view>
    <view class="login-line"><button class="button" bindtap="onLogin">登录</button></view>
    <view class="errorMessage">{{errorMessage}}</view>
  </view>
</view>
